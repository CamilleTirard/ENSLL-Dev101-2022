desc:ENSLL Tremolo

slider1:rate=4<0.1,20,0.1>Rate (Hz)
slider2:stereoWidth=0<0,180,1>Stereo Width (Â°)

in_pin:left input
in_pin:right input
out_pin:left output
out_pin:right output

@init
pos=0;

@slider
adv=2*$pi*rate/srate;
stereoWidth_rad=stereoWidth*0.01745329;

@sample
spl0 *= cos(pos);
spl1 *= cos(pos+stereoWidth_rad);

pos+=adv;
